<div class="main-greeting"><%= "#{@post.first["title"].upcase}" %>, THOUGHTS?</div>


<div class="form-container">
		<form class="contact" action="/comment" method="post">
			<input type="hidden" name="post_id" value=<%= "#{@post.first["id"]}" %>>
			
			<div class="input-row">
				<label for="description">COMMENT: </label>
				<textarea name="description" id="description" cols="30" rows="10"></textarea>
			</div>

			<div class="input-row">
				<label for="author">AUTHOR: </label>
				<input type="text" name="author" id="author" />
			</div>
			
			<div class="input-row">
				<input type="submit" value="LET'S GO!" />
			</div>
		</form>
</div>

<!-- <div>
	<img class="one-post-pic" src=<%= "#{@post.first["image_url"]}" %>>
</div> -->	

<div class="comments">

	<% if @comments.length > 0 %>
		<% @comments.each do |comment| %>

			<div>
				-<%="#{comment["author"]}" %>
			</div>

			<div>
				<%= "#{comment["description"]}" %>
			</div>

				<div class="vote">

					<form action="/comment" method="post">

						<input type="hidden" name="_method" value="put" />
						<input type="hidden" name="post_id" value=<%= "#{@post.first["id"]}" %>>
						<input type="hidden" name="comment_id" value=<%= "#{comment["id"]}" %>>
						
						<div class="like">
							<input type="submit" value="LIKE" />
						</div>
					</form>
					<div>
						LIKES: <%= "#{comment['vote']}"%>
					</div>	
				</div>


		<% end %>
	<% else %>	
		<div class="no-posts">(no comments yet)</div>
	<% end %>
</div>
